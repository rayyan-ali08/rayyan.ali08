<!DOCTYPE html>
<html>
<head>
<title>API Fetch Example</title>
<style>
body{font-family:Arial;background:#f2f2f2;padding:20px;text-align:center;}
button{padding:8px 
12px;margin:15px;background:#4CAF50;color:white;border:none;border-
radius:4px;cursor:pointer;}
#container{display:flex;flex-wrap:wrap;justify-content:center;gap:10px;}
.card{background:white;padding:15px;border-radius:6px;box-shadow:0 0 5px 
gray;width:150px;text-align:center;}
</style>
</head>
<body>
<h2>Users from API</h2>
<button id="fetchBtn">Load Users</button>
<div id="container"></div>
<script>
const container=document.getElementById('container');
document.getElementById('fetchBtn').onclick=()=>{
fetch('https://jsonplaceholder.typicode.com/users')
.then(res=>res.json())
.then(data=>{
container.innerHTML='';
data.forEach(u=>{
const card=document.createElement('div');
card.className='card';
card.textContent = u.name; // minimal info
container.appendChild(card);
});
})
.catch(()=>container.textContent='Failed to load data');
};
</script>
</body>
</html>
